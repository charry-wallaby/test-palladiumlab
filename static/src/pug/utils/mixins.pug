mixin icon(name, options)
    - options = options || {};
    svg(
        class = options.cls || `svg-icon svg-icon_${name}`
        width = options.w || null
        height = options.h || null
    )
        use(xlink:href="#" + name)

mixin img(className, name, ext, alt, folder, w, h)
    picture
        source(media="(orientation: landscape)", srcset=`img/${folder}/${name}@2x.${ext}`)
        source(media="(orientation: portrait)", srcset=`img/${folder}/${name}.${ext}`)
        img(class=`${className}` src=`img/${folder}/${name}.${ext}` alt=`${alt}` width=`${w}` height=`${h}`)

mixin image(mediumSrc, largeSrc, alt, lazy = true)
    picture
        source(media="(min-width: 1440px)" srcset=`${largeSrc}.webp` type="image/webp")
        source(media="(min-width: 1440px)" srcset=`${largeSrc}.jpg`)

        source(srcset=`${mediumSrc}.webp` type="image/webp")
        img(src=`${mediumSrc}.jpg` alt=alt loading=(lazy ? "lazy" : "eager"))